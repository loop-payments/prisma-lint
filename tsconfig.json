{
  "extends": ["@tsconfig/esm/tsconfig.json", "@tsconfig/node20/tsconfig"],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "#src/*": ["./src/*"]
    },
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
