{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
    },
  }
}
