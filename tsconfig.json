{
  "extends": [
    "@tsconfig/esm/tsconfig.json",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/strictest/tsconfig"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
