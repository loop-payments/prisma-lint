{
  "name": "prisma-lint",
  "version": "0.0.2",
  "description": "A linter for Prisma schema files.",
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "author": "engineering@loop.com",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/pluralize": "^0.0.29",
    "jest": "^29.3.1",
    "prettier": "2.8.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "bin": "dist/cli.js",
  "packageManager": "yarn@3.3.1",
  "scripts": {
